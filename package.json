{
  "name": "auto-html",
  "version": "1.2.0",
  "description": "ES6 Template string function for encoding text to HTML",
  "main": "js/index.js",
  "sideEffects": false,
  "scripts": {
    "prepare": "rimraf js/ && babel -s inline -d js/ src/ && flow-copy-source -v src js",
    "test": "yarn run lint && yarn run flow_check && mocha && tsc",
    "flow_check": "flow check",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix"
  },
  "author": "Chris Cowan <agentme49@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Macil/auto-html.git"
  },
  "bugs": {
    "url": "https://github.com/Macil/auto-html/issues"
  },
  "keywords": [
    "es6",
    "html",
    "escaping",
    "template"
  ],
  "dependencies": {
    "lodash": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "eslint": "^5.6.0",
    "flow-bin": "^0.81.0",
    "flow-copy-source": "^2.0.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.2.4",
    "typescript": "^3.0.3"
  },
  "greenkeeper": {
    "ignore": [
      "flow-bin"
    ]
  }
}
